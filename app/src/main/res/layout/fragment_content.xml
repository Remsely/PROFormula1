<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.content.ContentFragment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/content_screen_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/open_sans_bold"
        android:gravity="center"
        android:text="@string/content_screen_name"
        android:textColor="@color/red"
        android:textSize="30sp"/>

    <ScrollView
        android:id="@+id/content_screen_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/content_screen_scroll_view_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp">

        <LinearLayout
            android:id="@+id/content_author_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/simple_frame"
            android:layout_marginBottom="8dp"
            android:paddingBottom="3dp">

            <LinearLayout
                android:id="@+id/content_author_top_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="fill_horizontal"
                android:orientation="horizontal"
                android:paddingTop="7dp"
                android:paddingBottom="3dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp">

                <ImageView
                    android:id="@+id/content_author_logo"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/flag" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/content_author_name"
                            android:text="@string/author_name"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:fontFamily="@font/open_sans_bold"/>

                        <ImageView
                            android:id="@+id/content_author_recomendation"
                            android:layout_alignParentEnd="true"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/favourites"
                            android:scaleType="centerInside"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/content_author_information"
                        android:text="@string/information_about_author"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:fontFamily="@font/open_sans_bold"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/content_author_top_line"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/black"
                android:orientation="horizontal"
                android:gravity="center"/>

            <LinearLayout
                android:id="@+id/content_author_reference_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/content_author_social_network_logo"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/flag" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="7dp"
                    android:id="@+id/content_author_reference"
                    android:text="@string/network_reference"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/open_sans"/>
            </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>