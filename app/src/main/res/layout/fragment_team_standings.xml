<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.team_standings.TeamStandingsFragment"
    android:orientation="vertical"
    android:layout_marginStart="1dp"
    android:layout_marginEnd="1dp"
    android:layout_marginBottom="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/simple_frame"
        android:layout_gravity="top">

        <TextView
            android:gravity="center"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recently_stage_name"
            android:text="@string/constructors_cup"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/open_sans_bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/black"
            android:layout_marginBottom="2dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/current_season_team_standings_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="2dp"/>
    </LinearLayout>
</LinearLayout>