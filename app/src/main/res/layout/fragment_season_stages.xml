<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.season_stages.SeasonStagesFragment"
    android:background="@color/black"
    android:orientation="vertical">

    <ScrollView
        android:layout_marginTop="8dp"
        android:id="@+id/championship_screen_season_stages_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/championship_season_stage"
            android:background="@drawable/simple_frame"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:gravity="fill_horizontal"
            android:orientation="horizontal"
            android:paddingTop="7dp"
            android:paddingBottom="3dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:layout_marginEnd="1dp"
            android:layout_marginStart="1dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:id="@+id/championship_season_stage_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/championship_season_stage_name"
                    android:text="@string/stage_name"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:fontFamily="@font/open_sans_bold"/>

                <LinearLayout
                    android:id="@+id/championship_season_stage_winner_or_date_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/championship_season_stage_winner_flag"
                        android:layout_width="20dp"
                        android:layout_height="15dp"
                        android:background="@drawable/flag" />

                    <TextView
                        android:paddingStart="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/championship_season_stage_winner"
                        android:text="@string/winner_or_date"
                        android:textColor="@color/gold"
                        android:textSize="15sp"
                        android:fontFamily="@font/open_sans"/>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/championship_season_stage_place_flag"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/flag" />
        </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>