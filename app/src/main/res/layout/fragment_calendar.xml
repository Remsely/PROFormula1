<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.calendar.CalendarFragment"
    android:background="@color/black"
    android:orientation="vertical">

    <TextView
        android:id="@+id/home_screen_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/open_sans_bold"
        android:gravity="center"
        android:text="@string/calendar_screen_name"
        android:textColor="@color/red"
        android:textSize="30sp"/>

    <ScrollView
        android:id="@+id/calendar_screen_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp">

            <LinearLayout
                android:id="@+id/calendar_stage_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/simple_frame"
                android:layout_marginBottom="8dp"
                android:paddingBottom="3dp">

            <RelativeLayout
                android:id="@+id/calendar_stage_top_relative_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="fill_horizontal"
                android:orientation="horizontal"
                android:paddingTop="7dp"
                android:paddingBottom="3dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp">

                <LinearLayout
                    android:id="@+id/calendar_stage_name_and_place_of_event_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/calendar_stage_name"
                        android:text="@string/stage_name"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:fontFamily="@font/open_sans_bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/calendar_stage_place"
                        android:text="@string/stage_place"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:fontFamily="@font/open_sans_bold"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/calendar_stage_flag"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/flag" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/calendar_stage_top_line"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/black"
                android:orientation="horizontal" />

                <LinearLayout
                    android:id="@+id/calendar_stage_first_event_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="7dp"
                        android:id="@+id/calendar_stage_first_event"
                        android:text="1 событие Гран-при"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:fontFamily="@font/open_sans"/>

                    <TextView
                        android:paddingRight="3dp"
                        android:paddingLeft="3dp"
                        android:id="@+id/calendar_stage_first_till"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/till"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:fontFamily="@font/open_sans"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/calendar_stage_first_event_time"
                        android:text="Время события"
                        android:textColor="#E70000"
                        android:textSize="16sp"
                        android:fontFamily="@font/open_sans"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/calendar_stage_second_event_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="7dp"
                        android:id="@+id/calendar_stage_second_event"
                        android:text="2 событие Гран-при"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:fontFamily="@font/open_sans"/>

                    <TextView
                        android:paddingRight="3dp"
                        android:paddingLeft="3dp"
                        android:id="@+id/calendar_stage_second_till"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/till"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:fontFamily="@font/open_sans"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/calendar_stage_second_event_time"
                        android:text="Время события"
                        android:textColor="#E70000"
                        android:textSize="16sp"
                        android:fontFamily="@font/open_sans"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/calendar_stage_third_event_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="7dp"
                        android:id="@+id/calendar_stage_third_event"
                        android:text="3 событие Гран-при"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:fontFamily="@font/open_sans"/>

                    <TextView
                        android:paddingRight="3dp"
                        android:paddingLeft="3dp"
                        android:id="@+id/calendar_stage_third_till"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/till"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:fontFamily="@font/open_sans"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/calendar_stage_third_event_time"
                        android:text="Время события"
                        android:textColor="#E70000"
                        android:textSize="16sp"
                        android:fontFamily="@font/open_sans"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/calendar_stage_fourth_event_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="7dp"
                        android:id="@+id/calendar_stage_fourth_event"
                        android:text="4 событие Гран-при"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:fontFamily="@font/open_sans"/>

                    <TextView
                        android:paddingRight="3dp"
                        android:paddingLeft="3dp"
                        android:id="@+id/calendar_stage_fourth_till"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/till"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:fontFamily="@font/open_sans"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/calendar_stage_fourth_event_time"
                        android:text="Время события"
                        android:textColor="#E70000"
                        android:textSize="16sp"
                        android:fontFamily="@font/open_sans"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/calendar_stage_fifth_event_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="7dp"
                        android:id="@+id/calendar_stage_fifth_event"
                        android:text="5 событие Гран-при"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:fontFamily="@font/open_sans"/>

                    <TextView
                        android:paddingRight="3dp"
                        android:paddingLeft="3dp"
                        android:id="@+id/calendar_stage_fifth_till"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/till"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:fontFamily="@font/open_sans"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/calendar_stage_fifth_event_time"
                        android:text="Время события"
                        android:textColor="#E70000"
                        android:textSize="16sp"
                        android:fontFamily="@font/open_sans"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>